    <script src="~/Assets/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Scripts/dataTables.bootstrap.js"></script>
    <script src="~/Assets/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Assets/Scripts/metisMenu.min.js"></script>
    <script src="~/Assets/Scripts/confirm-bootstrap.js"></script>
