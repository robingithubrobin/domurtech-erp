@using DomurTech.ERP.Business.Managers.Options
@using DomurTech.ERP.UI.Web.Common.Globalization
@using DomurTech.Globalization
@model DomurTech.ERP.Business.Entities.Models.AccountModels.AccountModel

@{
    ViewBag.Title = Dictionaries.MyAccount;
    Layout = "~/Views/Shared/ApplicationLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@Dictionaries.MyAccount</h1>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i> <a href="/">@Dictionaries.HomePage</a></li>
                <li class="active"><i class="fa fa-user"></i> @Dictionaries.MyAccount</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="well" id="user-page-well">
                <div class="media">
                    <div class="media-left">
                        <img class="img-responsive img-thumbnail" id="user-profile-img" src="/UserFiles/@(Model.User.Id)/Images/user-profile.png" alt="@Model.User.DisplayName">
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">@Dictionaries.Welcome</h4>
                        <p>@Model.User.FullName,</p>
                        <p>@WebResources.WelcomeText</p>
                        <p>
                            <a href="@Url.Action("UpdateMyInformation")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-user"></i>&nbsp;@Dictionaries.UpdateMyInformation</a>
                            <a href="@Url.Action("UpdateMyPassword")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-lock"></i>&nbsp;@Dictionaries.UpdateMyPassword</a>
                            <a href="#" data-confirm-href="@Url.Action("Logout", new { logoutOptions = LogoutOptions.ValidLogut })" class="btn btn-primary btn-sm logout-link" data-confirm-title="@Messages.QuestionAreYouSure" data-confirm-message="@Messages.QuestionAreYouSureLogout" data-confirm-ok="@Dictionaries.Yes" data-confirm-cancel="@Dictionaries.No"><i class="glyphicon glyphicon-log-out"></i>&nbsp;@Dictionaries.Logout</a>
                        </p>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-lg-4">
            @Html.Action("UserSidebar")
        </div>
    </div>
</div>
