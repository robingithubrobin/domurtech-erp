@using DomurTech.ERP.UI.Web.Common.Helpers
@model DomurTech.ERP.Business.Entities.Models.AccountModels.UpdatePasswordModel

@{
    ViewBag.Title = @Texts.UpdateMyPassword;
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@Texts.UpdateMyPassword</h1>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i> <a href="/">@Texts.HomePage</a></li>
                <li><i class="fa fa-user"></i> <a href="@Url.Action("MyAccount")">@Texts.MyAccount</a></li>
                <li class="active">@Texts.UpdateMyPassword</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("UpdateMyPassword", "Account", FormMethod.Post, new {@role = "form"}))
            {
                <div class="form-group">
                    <label class="control-label">@Texts.OldPassword</label>
                    @Html.CustomPasswordFor(m => m.User.OldPassword, new {@class = "form-control", @placeholder = Texts.OldPassword, @maxlength = 32})
                    @Html.ValidationMessageFor(m => m.User.OldPassword)
                </div>
                <div class="form-group">
                    <label class="control-label">@Texts.NewPassword</label>
                    @Html.CustomPasswordFor(m => m.User.Password, new {@class = "form-control", @placeholder = Texts.Password, @maxlength = 32})
                    @Html.ValidationMessageFor(m => m.User.Password)
                </div>
                <div class="form-group">
                    <label class="control-label">@Texts.ConfirmPassword</label>
                    @Html.CustomPasswordFor(m => m.User.ConfirmPassword, new {@class = "form-control", @placeholder = Texts.ConfirmPassword, @maxlength = 32})
                    @Html.ValidationMessageFor(m => m.User.ConfirmPassword)
                </div>
                <a href="@Url.Action("MyAccount")" class="btn btn-primary"><i class="fa fa-long-arrow-left fa-fw"></i> @Texts.Back</a>
                <button class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;@Texts.Save</button>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 text-center">
            @Html.CustomAlertFor(m => m.Message, "div", Model.Message, new { @class = "alert alert-danger" })
        </div>
    </div>
</div>