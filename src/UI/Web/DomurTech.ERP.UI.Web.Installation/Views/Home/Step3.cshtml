
@{
    ViewBag.Title = "Yönetici Bilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DomurTech.Globalization
@model DomurTech.ERP.UI.Web.Installation.Models.AdminModel

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @Html.Action("StepWizard", new { @step = "3"})
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @if (Model.HasError)
        {
        <div class="alert alert-danger"><strong>Hata Oluştu! </strong>@Html.Raw(Model.Message)</div>
        }
        @using (Html.BeginForm("Step3", "Home", FormMethod.Post, new {@role = "form", @class = "form-horizontal", @id="Step3Form"}))
        {
        <fieldset>
            <legend>Yönetici Bilgileri</legend>
            <div class="form-group">
                @Html.LabelFor(x => x.FirstName, Dictionaries.FirstName, new {@class = "col-lg-3 control-label", @for = "FirstName"})
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.FirstName, "", new {@class = "help-block"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.LastName, Dictionaries.LastName, new {@class = "col-lg-3 control-label", @for = "LastName"})
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.LastName, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.LastName, "", new {@class = "help-block"})
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Username, Dictionaries.Username, new {@class = "col-lg-3 control-label", @for = "Username"})
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Username, "", new {@class = "help-block"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password, Dictionaries.Password, new {@class = "col-lg-3 control-label", @for = "Password"})
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Password, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Password, "", new {@class = "help-block"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ConfirmPassword, Dictionaries.ConfirmPassword, new {@class = "col-lg-3 control-label", @for = "ConfirmPassword"})
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.ConfirmPassword, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new {@class = "help-block"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Email, Dictionaries.Email, new {@class = "col-lg-3 control-label", @for = "Email"})
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Email, "", new {@class = "help-block"})
                </div>
            </div>


            <div class="form-group">
                <div class="col-lg-9 col-lg-offset-3">
                    <a href="@Url.Action("Step2")" class="btn pull-left btn-primary">&laquo; @Dictionaries.Previous</a>
                    <button class="btn pull-right btn-primary">@Dictionaries.Next &raquo;</button>
                </div>
            </div>






        </fieldset>

        }
    </div>
</div>